<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>PwingRaces-parent</artifactId>
        <groupId>net.pwing.races</groupId>
        <version>parent</version>
        <relativePath>../</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.pwing.races</groupId>
    <artifactId>PwingRaces-dist</artifactId>
    <version>parent</version>
    <packaging>jar</packaging>
    <name>PwingRaces-dist</name>
    <dependencies>
        <dependency>
            <groupId>net.pwing.races</groupId>
            <artifactId>PwingRaces</artifactId>
            <version>${revision}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.pwing.races</groupId>
            <artifactId>PwingRaces-API</artifactId>
            <version>${revision}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.pwing.races</groupId>
            <artifactId>PwingRaces-v1_12_R1</artifactId>
            <version>v1_12_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.pwing.races</groupId>
            <artifactId>PwingRaces-v1_13_R1</artifactId>
            <version>v1_13_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.pwing.races</groupId>
            <artifactId>PwingRaces-v1_13_R2</artifactId>
            <version>v1_13_R2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.pwing.races</groupId>
            <artifactId>PwingRaces-v1_14_R1</artifactId>
            <version>v1_14_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>net.pwing.races</groupId>
            <artifactId>PwingRaces-v1_15_R1</artifactId>
            <version>v1_15_R1</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <finalName>PwingRaces</finalName>
        <directory>../target</directory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.1.0</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
